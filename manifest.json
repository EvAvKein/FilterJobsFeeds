{
  "name": "Filter Jobs Feeds",
  "description": "An extension for filtering jobs listings from select sites' jobs feeds",
  "version": "1.5",

  "permissions": ["storage"],
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": false
  },
  "action": {
    "default_popup": "settings.html"
  },

  "content_scripts": [{
    "matches": ["https://www.linkedin.com/jobs/search/*", "https://angel.co/jobs"],
    "js": ["main.js"],
    "css": ["main.css"]
  }],
  
  "author": "Eve Aviv Keinan",

  "manifest_version": 3
}